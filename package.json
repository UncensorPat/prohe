{
  "name": "prohe",
  "displayName": "PROHE",
  "description": "The Productivity-Reinforcement-Oriented Haptics Extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/UncensorPat/prohe"
  },
  "icon": "images/logo.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prohe.connect",
        "title": "PROHE: Connect to server"
      },
      {
        "command": "prohe.updatedevicelist",
        "title": "PROHE: Refresh devices"
      },
      {
        "command": "prohe.disconnect",
        "title": "PROHE: Disconnect from server"
      }
    ],
    "configuration": {
      "title": "PROHE",
      "properties": {
        "prohe.typingWindow": {
          "type": "integer",
          "default": 5000,
          "description": "Length of the gap in typing (in milliseconds) before vibration decreases",
          "minimum": 0
        },
        "prohe.vibrationMax": {
          "type": "number",
          "default": 0.5,
          "description": "The maximum vibration intensity that can be achieved",
          "minimum": 0,
          "maximum": 1
        },
        "prohe.vibrationStages": {
          "type": "integer",
          "default": 10,
          "description": "The number of stages the vibration increases through",
          "minimum": 0
        },
        "prohe.vibrationStageLength": {
          "type": "integer",
          "default": 10000,
          "description": "Duration (in milliseconds) of each stage of vibration"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "buttplug": "^3.1.0",
    "filereader": "^0.10.3",
    "ws": "^8.12.0"
  }
}
